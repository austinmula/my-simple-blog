<h1 class="mt-5">{{title}}</h1>
<small>all {{title}}</small>

<div class="blog-container mt-3">
  {{#each posts}}
    <div class="blog">
      <a href="/post/{{id}}">
        <div class="blog-content">
          <h5> {{title}} </h5>
          <p class="mt-3">
            {{description}}
          </p>
        </div>
      </a>
      <div
        class="blog-actions d-flex justify-content-end align-items-center bg-secondary"
      >
        <div>

          {{! <form class="d-flex align-items-center bg-primary"> }}
          <button class="btn btn-danger mx-1">Delete</button>
          {{! </form> }}
        </div>
        <div>
          <a href="/edit/{{id}}" class="btn btn-secondary mx-1">Edit</a>
        </div>
      </div>
    </div>
  {{/each}}

</div>